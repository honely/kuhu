
.mall-box {
	position: absolute;
	top: 0;
	bottom: 0;
	left: 0;
	right: 0;
	background: #f2f2f2;
	overflow-y: scroll;
}
.mall-box .base-info {
	width: 100%;
	height: 80px;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	padding: 0 15px;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
	background: #fff;
}
.mall-box .base-info .b-face {
	width: 50px;
	height: 50px;
	border-radius: 25px;
}
.mall-box .base-info .b-mid {
	width: 100%;
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	    -ms-flex: 1;
	        flex: 1;
	padding: 0 15px;
	display: block;
}
.b-mid .bm-tit {
	color: #43494D;
	font-size: 16px;
}
.b-mid .bm-num {
	margin-top: 6px;
}
.b-mid .bm-num .num {
	color: #ED3005;
	font-size: 16px;
	margin-left: 4px;
}
.mall-box .base-info .b-record {
	height: 40px;
	line-height: 40px;
	border-radius: 20px;
	padding: 0 18px;
	border: 1px solid #ED3005;
	color: #ED3005;
	font-size: 16px;
}
.goods-list {
	width: 100%;
	display: table;
	padding: 2px 0;
}
.goods-list .item-goods {
	width: 50%;
	display: block;
	float: left;
	padding: 2px 0;
}
.goods-list .item-goods .g-cont {
	width: 100%;
	display: block;
	background: #fff;
}
.item-goods .g-cont .thumb-img {
	width: 100%;
	height: 186px;
	position: relative;
}
.item-goods .g-cont .thumb-img .g-num {
	height: 24px;
	line-height: 24px;
	position: absolute;
	top: 0;
	right: 0;
	color: #fff;
	font-size: 12px;
	border-bottom-left-radius: 8px;
	background: #000000;
	opacity: 0.5;
	padding: 0 10px;
}
.item-goods .g-cont .thumb-img .img {
	width: 100%;
	height: 100%;
}
.item-goods .g-cont .desc-info {
	width: 100%;
	padding: 12px 15px 16px 15px;
	display: block;
}
.desc-info .g-name {
	width: 100%;
	height: 40px;
	line-height: 20px;
	font-size: 16px;
	color: #333333;
	line-height: 18px;
}
.desc-info .g-price {
	width: 100%;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	margin-top: 10px;
}
.desc-info .g-price .gp-detail {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	    -ms-flex: 1;
	        flex: 1;
	display: block;
}
.desc-info .g-price .gp-detail .money-num {
	border: 1px solid #ED3005;
	padding: 0 4px;
	margin-top: 3px;
	display: -webkit-inline-box;
	display: -webkit-inline-flex;
	display: -ms-inline-flexbox;
	display: inline-flex;
	color: #ED3005;
	font-size: 14px;
}
.desc-info .g-price .gp-detail .coin-num {
	color: #ED3005;
	font-size: 16px;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
}
.desc-info .g-price .gp-exchange {
	height: 40px;
	line-height: 40px;
	color: #fff;
	font-size: 16px;
	background: #ED3005;
	padding: 0 12px;
	border-radius: 4px;
}

