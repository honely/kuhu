
.share-page {
	position: absolute;
	top: 0;
	bottom: 0;
	left: 0;
	right: 0;
	background: -o-linear-gradient(135deg, rgba(43, 46, 61, 1) 0%, rgba(87, 89, 104, 1) 100%);
	background: linear-gradient(315deg, rgba(43, 46, 61, 1) 0%, rgba(87, 89, 104, 1) 100%);
	overflow: scroll;
}
.share-page .share-cont {
	width: 100%;
	display: block;
}
.share-cont .poster-box {
	width: 90%;
	height: 440px;
	margin: 15px 5%;
	background: #fff;
}
.btn {
	width: 90%;
	height: 48px;
	margin: 6px 5%;
	display: -webkit-inline-box;
	display: -webkit-inline-flex;
	display: -ms-inline-flexbox;
	display: inline-flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
}
.btn-yellow {
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	    -ms-flex-pack: center;
	        justify-content: center;
	background: -webkit-gradient(linear, left top, right top, from(rgba(255, 174, 25, 1)), to(rgba(255, 128, 0, 1)));
	background: -o-linear-gradient(left, rgba(255, 174, 25, 1) 0%, rgba(255, 128, 0, 1) 100%);
	background: linear-gradient(90deg, rgba(255, 174, 25, 1) 0%, rgba(255, 128, 0, 1) 100%);
	border-radius: 8px;
	color: #fff;
	font-size: 18px;
}
.btn-white {
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	    -ms-flex-pack: center;
	        justify-content: center;
	background: #fff;
	border-radius: 8px;
	color: #FF8000;
	font-size: 18px;
}

