.search-cont {
	width: 92%;
	height: 40px;
	margin: 0 4%;
	border: 1px solid #CCCCCC;
	border-radius: 20px;
	padding: 0 15px;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
}
.search-cont .icon-search {
	color: #CCCCCC;
	font-size: 20px;
}
.search-cont .sinput-cont {
	width: 100%;
	/* height: 40px; */
	min-height: 40px;
	line-height: 40px;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	    -ms-flex: 1;
	        flex: 1;
	padding-left: 15px;
	color: #000000;
	font-size: 16px;
}
.screen-box {
	width: 100%;
	position: fixed;
	top: 0px;
	bottom: 0;
	background: rgba(0, 0, 0, 0.4);
}
.screen-box .item-screen {
	width: 100%;
	height: 50px;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	padding: 0 15px;
	background: #fff;
	border-top: 1px solid rgba(0, 0, 0, 0.1);
	color: #333333;
	font-size: 16px;
}
.item-goods-list {
	width: 100%;
	margin: 2px 0;
	padding: 15px;
	display: -webkit-inline-box;
	display: -webkit-inline-flex;
	display: -ms-inline-flexbox;
	display: inline-flex;
	background: #fff;
}
.item-goods-list .img-box {
	width: 120px;
	height: 120px;
	position: relative;
}
.item-goods-list .img-box .g-img {
	width: 120px;
	height: 120px;
}
.img-box .plus-price {
	width: 100%;
	height: 24px;
	position: absolute;
	bottom: 0;
	line-height: 24px;
	text-align: center;
	color: #fff;
	font-size: 8px;
	background: -webkit-gradient(linear, left top, right top, from(rgba(255, 164, 75, 1)), to(rgba(251, 74, 134, 1)));
	background: -o-linear-gradient(left, rgba(255, 164, 75, 1) 0%, rgba(251, 74, 134, 1) 100%);
	background: linear-gradient(90deg, rgba(255, 164, 75, 1) 0%, rgba(251, 74, 134, 1) 100%);
	opacity: 0.9;
}
.item-goods-list .g-cont {
	width: 100%;
	display: block;
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	    -ms-flex: 1;
	        flex: 1;
	margin-left: 10px;
	position: relative;
}
.item-goods-list .g-cont .gname {
	width: 100%;
	color: #2D3133;
	font-size: 16px;
}
.item-goods-list .g-cont .gdesc {
	width: 100%;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
	margin-top: 16px;
	font-size: 14px;
	color: #000000;
}
.item-goods-list .g-cont .gprice {
	width: 100%;
	position: absolute;
	bottom: 0;
	left: 0;
	font-size: 14px;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
	color: #999999;
}
.goods-list {
	width: 100%;
	background: #f8f8f8;
	display: table;
	padding: 2px 0;
}
.goods-list .item-goods {
	width: 50%;
	display: block;
	float: left;
	margin: 2px 0;
}
.goods-list .item-goods .img-box {
	width: 100%;
	height: 186px;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	position: relative;
}
.goods-list .item-goods .img-box .goods-img {
	width: 100%;
	height: 186px;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	background: #fff;
}
.goods-list .item-goods .goods-name {
	font-size: 16px;
	color: #333333;
	padding: 15px;
	background: #fff;
}
.goods-list .item-goods .goods-desc {
	width: 100%;
	background: #fff;
	padding: 0 15px 15px 15px;
	font-size: 14px;
	position: relative;
}
.goods-list .item-goods .goods-desc .price {
	font-size: 14px;
	color: #ED3005;
}
.goods-list .item-goods .goods-desc .cost-price {
	font-size: 12px;
	color: #999999;
	margin-top: 2px;
}
.goods-list .item-goods .goods-desc .cost-price .cost {
	text-decoration: line-through;
	margin-left: 4px;
}
.goods-list .item-goods .goods-desc .icon-cart {
	position: absolute;
	right: 15px;
	bottom: 16px;
	font-size: 24px;
	color: #ED3005;
}
.list-cont {
	/* background: #fff; */
	overflow-y: scroll;
}
.list-type {
	width: 100%;
	height: 50px;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
}
.list-type .type-cont {
	width: 100%;
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	    -ms-flex: 1;
	        flex: 1;
}
.list-type .type-cont .item-type {
	width: 33.3333%;
	height: 50px;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
