
.about-box{
	width: 100%;
	display: block;
	position: absolute;
	top: 0;
	bottom: 0;
	background: #fff;
	overflow: scroll;
}
.about-box .ab-logo{
	width: 100%;
	text-align: center;
	margin-top: 40px;
}
.about-box .ab-logo image{
	width: 120px;
	height: 162px;
	background: #fcfcfc;
}
.about-box .ab-intro{
	line-height: 24px;
	color: #666666;
	display: block;
	margin: 15px;
	font-size: 16px;
}
.about-box .item-about{
	width: 100%;
	padding: 0 15px;
	display: -webkit-inline-box;
	display: -webkit-inline-flex;
	display: -ms-inline-flexbox;
	display: inline-flex;
	margin: 6px 0;
	color: #000000;
	font-size: 16px;
}
.about-box .qrcode-cont{
	width: 100%;
	text-align: center;
	display: block;
	padding: 14px 0 36px 0;
}
.qrcode-cont .qr-img{
	width:129px;
	height:129px;
	background: #fcfcfc;
}
.qrcode-cont .qr-hint{
	color: #2D3133;
	font-size: 16px;
	margin-top: 8px;
}

