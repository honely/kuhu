.grade-rule {
	width: 92%;
	margin: 0 4% 20px 4%;
	background: #fff;
	border-radius: 8px;
	display: block;
	padding: 0 15px;
}
.grade-rule .g-header {
	width: 100%;
	height: 50px;
	line-height: 50px;
	color: #000000;
	font-size: 18px;
	border-bottom: 1px solid #CCCCCC;
}
.grade-rule .g-cont {
	width: 100%;
	padding: 15px 0;
	display: block;
}
.grade-rule .g-cont .item-rule {
	width: 100%;
	display: block;
	padding: 15px 0;
}
.grade-rule .g-cont .item-rule .ir-tit {
	height: 24px;
	line-height: 24px;
	display: -webkit-inline-box;
	display: -webkit-inline-flex;
	display: -ms-inline-flexbox;
	display: inline-flex;
	background: #FCF8ED;
	border-radius: 12px;
	padding: 0 8px;
	color: #FFAE19;
	font-size: 16px;
}
.grade-rule .g-cont .item-rule .ir-cont {
	width: 100%;
	margin: 8px 0;
	display: inline-block;
}
.item-rule .ir-cont .irc-tit {
	width: 100%;
	color: #333333;
	font-size: 16px;
	margin: 8px 0;
	font-weight: bold;
}
.item-rule .ir-cont .irc-desc {
	width: 100%;
	margin: 8px 0;
	color: #666666;
	font-size: 15px;
	display: inline-block;
}
.adviser-box {
	position: absolute;
	left: 0;
	right: 0;
	top: 0;
	bottom: 0;
	background: #F2F4F7;
	overflow-y: scroll;
}
.adviser-box .adb-card {
	width: 92%;
	height: 170px;
	margin: 15px 4% 12px 4%;
	background: #CD9D50;
	border-radius: 8px;
}
.adb-card .u-info {
	width: 100%;
	padding: 24px 20px;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
}
.adb-card .u-info .u-face {
	width: 64px;
	height: 64px;
	border-radius: 32px;
	background: #f00;
}
.adb-card .u-info .u-desc {
	width: 100%;
	padding: 0 15px;
	display: -webkit-inline-box;
	display: -webkit-inline-flex;
	display: -ms-inline-flexbox;
	display: inline-flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	    -ms-flex: 1;
	        flex: 1;
}
.adb-card .u-info .u-desc .g-icon {
	width: 28px;
	height: 32px;
}
.adb-card .u-info .u-desc .g-name {
	font-size: 24px;
	color: #fff;
	margin-left: 8px;
}
.adb-card .u-progress {
	width: 100%;
	padding: 0 24px;
	display: block;
}
.adb-card .u-progress .up-desc {
	width: 100%;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	margin-top: 5px;
}
.adb-card .u-progress .up-progress {
	width: 100%;
	height: 16px;
	position: relative;
	padding: 0 4px;
}
.adb-card .u-progress .up-progress .progress {
	width: 100%;
	height: 8px;
	border-radius: 4px;
	background: #000000;
	opacity: 0.3;
	position: absolute;
	top: 4px;
}
.adb-card .u-progress .up-progress .point {
	width: 8px;
	height: 8px;
	border-radius: 4px;
	background: #fff;
	position: absolute;
}
.adb-card .u-progress .up-progress .b-point {
	width: 16px;
	height: 16px;
	border-radius: 8px;
	background: #fff;
	opacity: 0.3;
	position: absolute;
	top: 0;
	left: 0;
}
.up-desc .item-progress {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	    -ms-flex: 1;
	        flex: 1;
	color: #fff;
	font-size: 14px;
}
.adb-data {
	width: 92%;
	height: 200px;
	margin: 0 4%;
	background: #fff;
	border-radius: 8px;
	padding: 0 15px;
}
.adb-data .item-data {
	width: 50%;
	height: 100px;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
	border-bottom: 1px solid #CCCCCC;
	float: left;
}
.adb-data .item-data .id-name {
	width: 40px;
	height: 40px;
	line-height: 40px;
	text-align: center;
	border-radius: 20px;
	background: #FCF8ED;
	font-size: 20px;
	color: #FF8C00;
}
.adb-data .item-data .id-desc {
	width: 100%;
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	    -ms-flex: 1;
	        flex: 1;
	display: block;
	padding: 0 3px 0 12px;
}
.adb-data .item-data .id-desc .num {
	color: #333333;
	font-size: 20px;
}
.adb-data .item-data .id-desc .hint {
	color: #333333;
	font-size: 14px;
	margin-top: 10px;
}
