
.xcx-footer-container {
	width: 100%;
	height: 49px;
	display: -webkit-inline-box;
	display: -webkit-inline-flex;
	display: -ms-inline-flexbox;
	display: inline-flex;
	background: #fff;
	position: fixed;
	bottom: 0;
	left: 0;
	border-top: 1px #eaeaea solid;
	z-index: 999;
}
.xcx-footer-container .footer-tab {
	width: 50%;
	height: 49px;
	display: -webkit-inline-box;
	display: -webkit-inline-flex;
	display: -ms-inline-flexbox;
	display: inline-flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	    -ms-flex-pack: center;
	        justify-content: center;
	float: left;
	text-align: center;
}
.footer-tab .icon {
	width: 22px;
	height: 22px;
	display: inline-block;
	font-size: 20px;
}
.footer-tab .name {
	width: auto;
	height: auto;
	color: #999999;
	margin-top: 2px;
	font-size: 10px;
}

