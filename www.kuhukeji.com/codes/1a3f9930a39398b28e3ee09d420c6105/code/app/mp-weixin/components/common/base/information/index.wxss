
.information-box{
	width: 100%;
	display: inline-block;
	padding: 0 15px;
	background: #fff;
	display: inline-block;
}
.information-box .item-information{
	width: 100%;
	display: inline-block;
	padding: 16px 0;
	border-bottom: 1px #E6E6E6 solid;
}
.information-box .item-information .in-title{
	color: #333333;
	font-size: 18px;
}
.information-box .item-information .in-date{
	color: #999999;
	font-size: 16px;
	margin: 16px 0;
}
.information-box .item-information .in-cont{
	color: #808080;
	font-size: 16px;
	padding-bottom: 12px;
}
.i-more{
	width: 96%;
	height: 50px;
	line-height: 50px;
	text-align: center;
	margin: 12px 2% 32px 2%;
	border: 1px solid #CCCCCC;
	display: inline-block;
	color: #333333;
	font-size: 18px;
}
.videoBox{
	width: 100%;
	display: inline-block;
}

