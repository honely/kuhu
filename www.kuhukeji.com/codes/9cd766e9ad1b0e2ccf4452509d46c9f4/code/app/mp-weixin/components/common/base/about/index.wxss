
.about-box {
	width: 100%;
	display: inline-block;
	padding: 0 15px;
	background: #fff;
}
.about-box>image {
	width: 100%;
	height: 230px;
}
.about-box .a-title {
	margin: 24px 0 16px 0;
	color: #333333;
	font-size: 18px;
}
.about-box .a-content {
	color: #666666;
	font-size: 16px;
	padding-bottom: 12px;
}
.a-more {
	width: 96%;
	height: 50px;
	line-height: 50px;
	text-align: center;
	margin: 12px 2% 32px 2%;
	border: 1px solid #CCCCCC;
	display: inline-block;
	color: #333333;
	font-size: 18px;
}

