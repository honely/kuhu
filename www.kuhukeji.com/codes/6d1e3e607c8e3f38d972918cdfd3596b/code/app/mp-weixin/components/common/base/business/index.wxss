
.busi-cont {
	width: 100%;
	display: inline-block;
	padding: 0 8px;
	background: #fff;
}
.busi-cont .item-business {
	width: 47%;
	margin: 12px 1.5%;
	float: left;
	display: inline-block;
}
.busi-cont .item-business .b-image {
	width: 100%;
	height: 110px;
	/* background: #f00; */
}
.busi-cont .item-business .b-main-tit {
	font-size: 18px;
	color: #333333;
	margin: 10px 0;
}
.busi-cont .item-business .b-sub-tit {
	height: 44px;
	line-height: 22px;
	font-size: 16px;
	color: #808080;
}
.b-more {
	width: 96%;
	height: 50px;
	line-height: 50px;
	text-align: center;
	margin: 12px 2% 32px 2%;
	border: 1px solid #CCCCCC;
	display: inline-block;
	color: #333333;
	font-size: 18px;
}

