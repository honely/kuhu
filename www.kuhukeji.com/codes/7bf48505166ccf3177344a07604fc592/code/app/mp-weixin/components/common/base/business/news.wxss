
.item-news {
	background: #ffffff;
	border-bottom: 1px solid #DCDFE6;
}
.item-news .tit {
	margin-top: 8px;
	height: 20px;
	line-height: 20px;
	width: 100%;
	overflow: hidden;
	color: #333333;
	font-size: 16px;
	font-weight: 600;
}
.item-news .time {
	color: #999999;
	font-size: 14px;
	margin-top: 10px;
	line-height: 20px;
	margin-bottom: 10px;
}
.item-news .cont {
	width: 100%;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	overflow: hidden;
}
.item-news .cont .img{
	width: 90px;
	height: 90px;
	display: -webkit-inline-box;
	display: -webkit-inline-flex;
	display: -ms-inline-flexbox;
	display: inline-flex;
	margin-right: 14px;
}
.item-news .cont .desc {
	width: 100%;
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	    -ms-flex: 1;
	        flex: 1;
	font-size: 14px;
	line-height: 21px;
	color: rgba(128, 128, 128, 1);
	margin-top: 2px;
	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 4;
	overflow: hidden;
}

