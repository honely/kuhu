
.signin-record{
	width: 100%;
	display: block;
	position: absolute;
	top: 0;
	bottom: 0;
}
.signin-record .top-cont{
	width: 100%;
	height: 160px;
	background:-o-linear-gradient(138deg,rgba(255,140,0,1) 0%,rgba(228,49,48,1) 100%);
	background:linear-gradient(312deg,rgba(255,140,0,1) 0%,rgba(228,49,48,1) 100%);
	position: absolute;
	top: 0;
}
.signin-record .top-cont .tc-tit{
	width: 100%;
	font-size: 14px;
	color: #fff;
	opacity: 0.8;
	margin-top: 30px;
	text-align: center;
}
.signin-record .top-cont .tc-num{
	width: 100%;
	text-align: center;
	color: #FFFFFF;
	font-size: 36px;
	margin-top: 12px;
}
.signin-record .record-list{
	width: 100%;
	position: absolute;
	top: 140px;
	bottom: 0;
	overflow-y: scroll;
	background: #fff;
	border-radius:16px 16px 0 0;
	padding: 0 15px;
}
.signin-record .record-list .item-record{
	width: 100%;
	height: 72px;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
	border-bottom: 1px solid #CCCCCC;
}
.item-record .r-lt{
	width: 100%;
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	    -ms-flex: 1;
	        flex: 1;
	display: block;
}
.item-record .r-lt .rl-type{
	color: #333333;
	font-size: 16px;
}
.item-record .r-lt .rl-date{
	color: #AAAFB3;
	font-size: 14px;
	margin-top: 8px;
}
.item-record .r-rt{
	font-size: 18px;
	color: #000000;
}

